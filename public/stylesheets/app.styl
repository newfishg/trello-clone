@import url('whitespace_reset.css')
@import 'general'



body
  min-height: 650px
  font: normal 14px Helvetica, Arial, sans-serif
  background: #0079bf

header
  height: 30px
  padding: 5px
  background: #026aa7
  position: fixed
  top: 0
  left: 0
  right: 0
  overflow: hidden
  .header-search
    position: absolute
    left: 50px
    .close-modal
      display: none
      position: absolute
      right: 6px
      top: 6px
    input[type="text"]
      border: none
      border-radius: 3px
      width: 150px
      padding: 7px 7px
      background: rgba(255, 255, 255, .3) url('/images/header-search.png') 100% 3px no-repeat
      &:hover
        background: rgba(255, 255, 255, .4) url('/images/header-search.png') 100% 3px no-repeat
      &.search-input-extend
        width: 300px
        background: #fff
  a.header-logo
      position: absolute
      display: block
      left: 50%
      margin-left: -30px
      width: 20%
      height: 24px  
      background: transparent url('/images/header-logo.png') 0 0 no-repeat
      background-size: 80px 30px
  .header-notification
    // float: right
    position: absolute
    right: 5px
    width: 30px
    background: rgba(255, 255, 255, .3)
    border-radius: 3px
    &:hover
      background: rgba(255, 255, 255, .4)
    span.icon-bell
      display: block
      width: 30px
      height: 30px
      background: transparent url('/images/header-bell.png') 50% 50% no-repeat
      background-size: 14px 16px
  .bell-active
    background: red

main
  margin-top: 40px
  padding: 5px 10px
  white-space: nowrap
  .subscribe-activity
    display: none
    position: absolute
    top: 40px
    right: 5px
    width: 450px
    padding: 10px
    background: #ececec
    border-radius: 3px
    box-sizing: border-box
    z-index: 3
    .notification-header
      position: relative
      padding: 0 0 10px 0
      text-align: center
      border-bottom: 1px solid #d6dadc
      .close-modal
        position: absolute;
        right: 0;
        top: 0;
      h3
        color: #8c8c8c
    .notification-wrapper
      height: 200px
      overflow: hidden
      padding: 10px 0 0 0
      li
        padding: 10px
        margin-bottom: 5px
        background: #fafafa
        border-radius: 3px
        p
          margin-top: 10px
        a
          display: inline-block
          padding: 0 5px 0 0
          text-decoration: underline
          color: #000
        .smaller
          margin: 0 0 0 5px
  .board-header
    .board-header-btn
      display: inline-block
      border-radius: 3px
      color: #f6f6f6
      &:hover
        background: #026aa7
    .board-header-btn-text
      font-weight: bold
      font-size: 9px
      
    a.board-header-btn
      display: inline-block
      padding: 5px 10px
      span.board-header-btn-name
        font-size: 18px
    div.board-header-btns
      display: inline-block
      span.icon-star
        width: 12px
        height: 12px
        background: transparent url('/images/board-header-star.png') 0 0 no-repeat
        background-size: 12px 12px
      span.icon-lock
        width: 12px
        height: 12px
        background: transparent url('/images/board-header-lock.png') 50% 50% no-repeat
        background-size: 12px 12px
      span.board-header-btn-text
        padding-left: 5px
        font-weight: normal
  .list-placeholder
    display: inline-block
    background: #C4C9CC
    margin-right: 10px
    border-radius: 3px
  .list-card
    display: inline-block
    vertical-align: top
    width: 270px
    margin-right: 10px
    background: #e2e4e6
    border-radius: 3px
    box-sizing: border-box
    h2
      padding: 10px 10px 5px 10px
      &:hover
        cursor: pointer
    ul
      padding: 0 10px
      min-height: 10px
      .card-placeholder
        background: #C4C9CC
      li
        position: relative
        display: block
        width: 100%
        margin: 0 0 7px 0
        padding: 10px
        border-radius: 3px
        background: #fff 
        box-sizing: border-box
        &:hover
          background: #f7f7f7
        span.edit
          display: none
          position: absolute
          top: 5px
          right: 5px
          width: 24px
          height: 24px
          border-radius: 2px
          background: transparent url('/images/icon-edit.png') 50% 50% no-repeat
          background-size: 12px 12px
          &:hover
            background: #ccc url('/images/icon-edit.png') 50% 50% no-repeat
            background-size: 12px 12px
        &:hover span.edit
          display: block
      .list-card-labels
        width: 90%
        white-space: normal
        span.card-label
          display: inline-block
          height: 7px
          width: 40px
          border-radius: 2px
          margin: 0 3px 3px 0
      h3
        color: #4d4d4d
      .list-card-badges
        width: 100%
        max-height: 20px
        .card-badge
          margin-right: 7px
          padding: 1px
          span
            padding: 2px
          &:before
            content: ''
            display: inline-block
            width: 20px
            height: 20px
        .badge-subscribe:before
            background: transparent url('/images/icon-sub.png') 50% 50% no-repeat
            background-size: 12px 12px
        .badge-future-dueDate
          vertical-align: -3px
          &:before
            background: transparent url('/images/icon-clock.png') 50% 50% no-repeat
            background-size: 12px 12px
        .badge-description:before
          background: transparent url('/images/icon-description.png') 50% 50% no-repeat
          background-size: 12px 12px
        .badge-comments
          &:before
            background: transparent url('/images/comment-icon.png') 50% 50% no-repeat
            background-size: 12px 12px

    .card-composer
      display: none
      padding: 0 10px 10px 10px
      textarea
        display: block
        width: 100%
        height: 65px
        margin: 0 0 10px 0
        border: none
    .open-card-composer
      display: block
      padding: 10px
      color: #666
      border-radius: 0 0 3px 3px
      &:hover
        background: #ccc
        text-decoration: underline
  .new-list
    display: inline-block
    vertical-align: top
    width: 270px
    background: #026aa7
    padding: 10px 10px
    border-radius: 5px
    box-sizing: border-box
    .open-list-composer
      display: block
      color: #bababa
      cursor: pointer
    .list-composer
      display: none
    .list-name-input
      width: 100%
      margin: 0 0 5px 0
      padding: 7px 11px
      border: none
      border-radius: 3px
      box-sizing: border-box
      font-size: 14px
      &:focus
        outline: none

#modal-overlay
  display: none
  overflow: auto
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 10
  content: ""
  background: rgba(0, 0, 0, 0.4)

#edit-card-modal
  position: absolute
  top: 50px
  width: 740px
  left: 50%
  margin-left: -370px
  padding: 10px
  border-radius: 3px
  color: #8c8c8c
  z-index: 12
  box-sizing: border-box
  background: #edeff0
  h2
    font-size: 18px
    color: #4d4d4d
    margin: 0 0 7px 0
  h3
    margin: 0 0 5px 0
  .card-main
    width: 73%
  .card-header
    margin: 0 0 10px 0
    text-indent: 40px
    background: transparent url('/images/icon-card-header.png') 0 0 no-repeat
    textarea
      display: none
      width: 493px
      min-height: 22px
      padding: 5px 0 0 8px
      border: none
      font: bold 18px Helvetica, Arial, sans-serif
      resize: vertical
      word-wrap: break-word

    .card-move
      text-decoration: underline
      color: #8c8c8c
      cursor: pointer
    .subscribe-active
      display: inline-block
      vertical-align: top
      width: 16px
      height: 16px
      background: transparent url('/images/icon-sub.png') 0 0 no-repeat
      margin: 0 0 0 10px
  .card-main-content
    margin: 0 0 40px 40px
  .card-labels
    float: left
    padding: 0 10px 0 0
    .card-label
      float: left
      // display: inline-block
      // vertical-align: top
      height: 30px
      min-width: 40px
      margin: 0 5px 5px 0
      padding: 6px 10px 0 10px
      border-radius: 5px
      text-shadow: 0 0 5px rgba(0,0,0,.2), 0 0 2px #000
      color: #fff
      font-weight: bold
      box-sizing: border-box
      cursor: pointer
    .card-label-add
      display: inline-block
      vertical-align: top
      height: 30px
      width: 30px
      border-radius: 5px
      cursor: pointer
      background: #ccc url('/images/icon-label-add.png') 50% 50% no-repeat
  .card-due-date
    margin: 0 0 25px 0
    float: left
    .edit-card-due
      display: inline-block
      padding: 7px
      background: #ddd
      text-decoration: underline
      border-radius: 3px
      cursor: pointer
      input[type="checkbox"]
        display: none
      label
        display: inline-block
        vertical-align: top
        width: 16px
        height: 16px
        margin: 0 10px 0 0 
        background: transparent url('/images/icon-square-checkbox.png') 50% 50% no-repeat
      input[type="checkbox"]:checked + label
        background: transparent url('/images/icon-checkbox-checkbox.png') 50% 50% no-repeat 
      &:hover
        background: #D6DADC;
        color: #4d4d4d;
        cursor: pointer;
    .is-completed
      background-color: #519839;
      color: #fff;
      &:hover
        background-color: #519839;
        color: #fff;
        cursor: pointer;
  .card-description
    clear: both
    span
      margin-left: 10px
      text-decoration: underline
      cursor: pointer
    p
      color: #222
    
    .description-submit-controls
      display: none
      textarea
        display: block
        width: 100%
        height: 110px
        background: rgba(0, 0, 0, .03)
        border-color: rgba(0, 0, 0, .15)
        box-shadow: inset 0 1px 6px rgba(0, 0, 0, .1)
        margin-bottom: 4px

  .card-add-comment
    margin: 0 0 10px 0
    width: 100%
    text-indent: 40px
    background: transparent url('/images/icon-card-comment.png') 0 0 no-repeat
    form
      position: relative
      text-align: right
      textarea
        display: block
        width: 92.5%
        min-height: 75px
        margin: 0 0 10px 40px
      input[type="submit"]:disabled
        background: #E2E4E6
        color: #8c8c8c
  .card-activities
    margin: 0 0 10px 0
    text-indent: 40px
    background: transparent url('/images/icon-card-comments.png') 0 0 no-repeat
    ul
      margin: 0 0 0 40px
      text-align: left
      text-indent: 0
    li
      padding: 15px 0 0 0
      p
        margin: 0 0 15px 0
      a
        text-decoration: underline
      + li
        border-top: 1px solid #d8d8d8
    .comment-content
      text-indent: 0
      display: inline-block
      margin: 0 0 10px 0
      padding: 9px 11px
      background: #fff
      color: #4d4d4d
      border-radius: 5px
      box-shadow: 0 1px 2px rgba(0, 0, 0, .23)
      
  .card-aside
    width: 23%
    padding: 15px
    margin-top: 50px
    color: #4d4d4d
    box-sizing: border-box
    .card-aside-btn
      display: block
      margin: 0 0 10px 0
      padding: 9px 7px 5px 7px;
      border: 1px solid #E2E4E6
      border-radius: 3px
      font-weight: bold
      background: linear-gradient(to bottom,#fff 0,#F8F9F9 100%)
      box-sizing: border-box
      cursor: pointer
      &:hover
        background: #298FCA
        color: #fff
    .subscribe-active
      display: inline-block
      vertical-align: top
      width: 24px
      height: 18px
      margin: 0 0 0 5px
      border-radius: 3px
      background: #61BD4F
      &:before
        vertical-align: top
        content: ''
        display: inline-block
        width: 24px
        height: 18px
        background: transparent url('/images/icon-subscribe-check.png') 50% 50% no-repeat
        background-size: 14px 14px
    .card-add-label:before
      vertical-align: top
      content: ''
      display: inline-block
      width: 20px
      height: 20px
      background: transparent url('/images/icon-add-label.png') 0 0 no-repeat
    .card-add-due:before
      vertical-align: top
      content: ''
      display: inline-block
      width: 20px
      height: 20px
      background: transparent url('/images/icon-card-due.png') 0 0 no-repeat
    .card-move:before
      vertical-align: top
      content: ''
      display: inline-block
      width: 20px
      height: 20px
      background: transparent url('/images/icon-move.png') 0 0 no-repeat
    .card-copy:before
      vertical-align: top
      content: ''
      display: inline-block
      width: 20px
      height: 20px
      background: transparent url('/images/icon-card-copy.png') 0 0 no-repeat
    .card-subscribe:before
      vertical-align: top
      content: ''
      display: inline-block
      width: 20px
      height: 20px
      background: transparent url('/images/icon-sub.png') 0 0 no-repeat

    .card-archive:before
      vertical-align: top
      content: ''
      display: inline-block
      width: 20px
      height: 20px
      background: transparent url('/images/icon-archive.png') 0 0 no-repeat
  
  .pop-window
    display: none
    position: absolute
    width: 300px
    // height: 500px
    top: 150px
    left: 550px
    padding: 8px
    border: 1px solid #D6DADC
    background: #fff
    border-radius: 3px
    box-shadow: 0 1px 6px rgba(0, 0, 0, .15)
    box-sizing: border-box
    z-index: 5

.pop-window-overlay
  display: none
  position: fixed
  background: rgba(0, 0, 0, 0)
  top: 0
  right: 0
  left: 0
  bottom: 0
  z-index: 4


.pop-window-header
  position: relative
  text-align: center
  margin: 0 0 10px 0
  .pop-window-header-title
    display: block
    line-height: 36px
    border-bottom: 1px solid #d6dadc


.labels-wrapper
  .label-input
    width: 100%
    margin: 0 0 10px 0
    padding: 10px
    border-radius: 3px
    border: 1px solid #ececec
    background: #e2e4e6
    box-sizing: border-box
    outline: none
    &:focus
      background: #fff
      border-color: #298FCA
      box-shadow: 0 0 2px #298FCA
  li.label-active
    background: black
  .toggle-card-label
    display: inline-block
    position: relative
    vertical-align: top
    width: 240px
    height: 35px
    padding: 10px
    border-radius: 3px
    color: #fff
    font-weight: bold
    text-shadow: 0 0 5px rgba(0,0,0,.2), 0 0 2px #000
    box-sizing: border-box;
    .label-active
      display: inline-block;
      background: transparent url('/images/icon-label-check.png') 0 0 no-repeat;
      width: 16px;
      height: 16px;
      position: absolute;
      right: 10px;
  .edit-card-label
    display: inline-block
    width: 35px
    height: 35px
    margin: 0 0 0 5px
    border-radius: 3px
    background: transparent url('/images/icon-edit.png') 50% 50% no-repeat;
    background-size: 12px 12px
    cursor: pointer
    &:hover
      background-color: #d6dadc
  .create-new-label
    display: block
    padding: 10px
    border-bottom: 1px solid #d6dadc;
    text-decoration: underline
    cursor: pointer

.label-edit-wrapper
  .submit-button
    padding: 12px 20px
  .pre-pop-window
    position: absolute
    top: 10px
    left: 0
    width: 16px
    height: 16px
    cursor: pointer
    background: transparent url('/images/icon-prev.png') 0 0 no-repeat
  .close-pop-window
    background: transparent url('/images/icon-exit.png') 0 0 no-repeat
  .label-input
    width: 100%
    margin: 0 0 10px 0
    padding: 10px
    border-radius: 3px
    border: 1px solid #ececec
    background: #e2e4e6
    box-sizing: border-box
    outline: none
    &:focus
      background: #fff
      border-color: #298FCA
      box-shadow: 0 0 2px #298FCA
  .label-active
    display: inline-block
    background: transparent url('/images/icon-label-check.png') 0 0 no-repeat;
    width: 16px
    height: 16px
    margin: 10px 15px
  .label-color-picker
    float: left
    height: 36px
    margin: 0 10px 10px 0;
    width: 45px
    border-radius: 3px
    cursor: pointer
  .edit-label-controls
    clear: both
    position: relative
  .label-submit-btn
    padding-left: 30px
    padding-right: 30px
  .label-remove-btn
    position: absolute
    right: 0
    background: linear-gradient(to bottom,#D6DADC 0,#CDD2D4 100%)
    color: #b04632
    &:hover
      background: linear-gradient(to bottom,#CF513D 0,#B04632 100%)
      color: #fff
      box-shadow: 0 1px 0 #4d4d4d

.due-date-wrapper
  .pop-window-content
    .datepicker-select-date,
    .datepicker-select-time
      float: left
      margin: 0 0 20px 0
    .datepicker-select-date
      padding: 0 5px 0 0
    .date-input-title
      display: block
      font-weight: bold
      color: #4d4d4d
    .due-date-input
      width: 135px
      background: #e2e4e6
      padding: 7px
      border: 1px solid #CDD2D4
      border-radius: 3px
      box-sizing: border-box
      &:focus
        background: #fff;
        border-color: #298FCA;
        box-shadow: 0 0 2px #298FCA;
    .date-picker-container
      clear: both
      margin: 0 0 10px 0
      .ui-datepicker-prev
        float: left
      .ui-datepicker-next
        float: right
      .ui-datepicker-title
        text-align: center
        margin: 0 0 10px 0
    .ui-datepicker-today
      font-weight: bold
    table, td, th
      vertical-align: top;
      border-top: 1px solid #D6DADC;
      border-left: 1px solid #D6DADC;
    thead
      background: linear-gradient(to bottom,#fff 0,#EDEFF0 100%)
    td, th
      border-right: 1px solid #D6DADC;
      border-bottom: 1px solid #D6DADC;
    table
      border-collapse: collapse
      border-spacing: 0
      width: 280px
      height: 190px
      box-sizing: border-box
      th
        line-height: 25px;
        font-weight: 700;
      td
        text-align: center
        padding: 0
        &.ui-state-disabled
          background: #edeff0
        a
          display: block
          padding: 8px
          color: #4d4d4d
          &:hover
            background: #d6dadc
          &.ui-state-active
            color: #fff
            background: #0079BF
    .date-picker-control
      position: relative
      .submit-button
        padding-top: 12px
        padding-bottom: 12px
      .date-submit-btn
        padding-left: 30px
        padding-right: 30px
      .date-remove-btn
        position: absolute
        right: 0
        background: linear-gradient(to bottom,#D6DADC 0,#CDD2D4 100%)
        color: #b04632
        &:hover
          background: linear-gradient(to bottom,#CF513D 0,#B04632 100%)
          color: #fff
          box-shadow: 0 1px 0 #4d4d4d
          

.archive-wrapper
  p
    font-weight: bold
    font-size: 18px
    color: #000
    padding: 0 0 20px 0
  

.comment-edit-controls
  padding: 0 0 10px 0
  display: none
  li + li
    border-top: 1px solid #e2e4e6
  textarea
    width: 100%
    height: 100px
    margin: 0 0 10px 0
    
.pop-window-content
  h3
    color: #4d4d4d
    font-weight: bold
  textarea
    width: 100%
    height: 70px
    margin: 0 0 10px 0
    background: #e2e4e6
    border: 1px solid #CDD2D4
    &:hover
      border-color: #A5ACB0
    &:focus
      background: #fff
      border-color: #298FCA
      box-shadow: 0 0 2px #298FCA
  .copy-option-check
    color: #4d4d4d
    margin: 0 0 0 10px
    display: block
  .flex-grid
    display: flex
    flex-wrap: wrap
    width: 100%
    margin: 0 0 10px 0
  .button-link
    float: left
    position: relative
    height: 52px
    max-width: 300px
    padding: 7px
    margin-top: 6px
    font-weight: 700
    border-radius: 3px
    border: 1px solid #E2E4E6
    border-bottom-color: #CDD2D4
    background: -webkit-linear-gradient(top,#fff 0,#F8F9F9 100%)
    background: linear-gradient(to bottom,#fff 0,#F8F9F9 100%)
    cursor: pointer
    overflow: hidden
    text-overflow: ellipsis
    user-select: none
    box-sizing: border-box
    &:hover
      background: #298FCA
      border-color: #298FCA #298FCA #026AA7
    .label
      color: #8c8c8c
      display: block
      font-size: 9pt
      line-height: 14px
      margin-bottom: 0
    .value
      display: block
      font-size: 18px
      line-height: 24px
      color: #4d4d4d
      overflow: hidden
      text-overflow: ellipsis
  .threequarter
    -webkit-box-flex: 3
    -webkit-flex: 3
    -ms-flex: 3
    flex: 3
    margin-right: 10px
  .quarter
    -webkit-box-flex: 1
    -webkit-flex: 1
    -ms-flex: 1
    flex: 1
  
  #list-selector,
  #position-selector
    border: none
    cursor: pointer
    height: 50px
    left: 0
    margin: 0
    opacity: 0
    position: absolute
    top: 0
    z-index: 2
    width: 100%
  
.search-container
  display: none
  position: absolute
  top: 40px
  left: 50px
  width: 500px
  height: 300px
  padding: 10px
  border-radius: 3px
  color: #8c8c8c
  z-index: 5
  box-sizing: border-box
  background: #edeff0
  overflow: hidden
  p
    font-size: 18px
    color: #000
  ul
    font-size: 18px
    li
      padding: 10px
      a
        text-decoration: underline
        color: #000
        cursor: pointer
      